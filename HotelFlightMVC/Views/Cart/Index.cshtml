@model HotelFlightMVC.Models.Cart

@{
    ViewData["Title"] = "Your Cart";
}

<header>
    <nav id="navbar">
        <div class="container">
            <h1 class="logo"><a href="@Url.Action("Index", "Home")">HotelFlightBooking</a></h1>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                <li><a href="@Url.Action("Privacy", "Home")">Privacy</a></li>
            </ul>
        </div>
    </nav>
</header>

<div class="container my-5">
    <h1 class="text-center" style="color: #007bff;">Your Cart</h1>
    <div class="row justify-content-center">
        @if (Model.FlightTicket == null && Model.HotelRoom == null)
        {
            <p class="text-center">Your cart is empty. Add items to proceed.</p>
        }
        else
        {
            <div class="col-md-6">
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3>Flight Ticket</h3>
                    </div>
                    @if (Model.FlightTicket != null)
                    {
                        <img src="~/images/flight_placeholder.jpg" alt="Flight" class="card-img-top">
                        <div class="card-body">
                            <p><strong>Flight:</strong> @Model.FlightTicket.Airline</p>
                            <p><strong>Tickets:</strong> @Model.NumberOfTickets</p>
                            <p><strong>Price:</strong> $@Model.FlightTicket.Price</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No flight ticket added.</p>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-primary text-white">
                        <h3>Hotel Room</h3>
                    </div>
                    @if (Model.HotelRoom != null)
                    {
                        <img src="~/images/hotel_placeholder.jpg" alt="Hotel" class="card-img-top">
                        <div class="card-body">
                            <p><strong>Hotel:</strong> @Model.HotelRoom.Name</p>
                            <p><strong>Rooms:</strong> @Model.NumberOfRooms</p>
                            <p><strong>Price per Night:</strong> $@Model.HotelRoom.PricePerNight</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No hotel room added.</p>
                    }
                </div>
            </div>

            <div class="col-12 text-center my-3">
                <h4>Total Price: $@Model.TotalPrice</h4>
                <form asp-action="Checkout" method="post">
                    <button type="submit" class="btn btn-primary btn-lg">Proceed to Checkout</button>
                </form>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }
    .card-header {
        font-weight: bold;
        text-align: center;
    }
    img.card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>
