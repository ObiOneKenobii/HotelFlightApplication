@{
    ViewData["Title"] = "Make Payment";
}

<style>
    body {
        background-color: #e0f7fa;
        font-family: Arial, sans-serif;
    }
    .payment-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .payment-box {
        text-align: center;
        background-color: #ffffff;
        padding: 50px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    .payment-box .tick {
        font-size: 100px;
        color: #4CAF50;
    }
    .payment-box h2 {
        margin-top: 20px;
        font-size: 24px;
        color: #333;
    }
    .payment-box p {
        font-size: 18px;
        color: #555;
    }
</style>

<div class="payment-container">
    <div class="payment-box">
        <div class="tick">✔</div>
        <h2>Make Your Payment</h2>
        <p>Please transfer the Hotel Room amount to the account below:</p>
        <p><strong>Bank:</strong> Chase Bank</p>
        <p><strong>Account Number:</strong> 8452137475</p>
        <p><strong>Account Name:</strong> HillsBay Chase Bank Corporate Account</p>
        <p>Thank you for your purchase!</p>
    </div>
</div>
