<header>
    <nav id="navbar">
        <div class="container">
            <h1 class="logo"><a href="@Url.Action("Index", "Home")"> HotelFlightBooking</a></h1>
            <ul>
                <li><a class="current" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("About", "Home")">About</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                <li><a href="@Url.Action("Privacy", "Home")">Privacy</a></li>
            </ul>
        </div>
    </nav>

    <!-- Showcase Section with Background Image -->
    <div id="showcase">
        <div class="container">
            <div class="showcase-content">
                <h1><span class="text-primary">Relax</span> and Rejuvenate</h1>
                <p class="lead">Experience a unique blend of comfort, luxury, and convenience at our top-rated destination.</p>
                <a class="btn" href="@Url.Action("About", "Home")">Discover Our Story</a>
            </div>
        </div>
    </div>
</header>

<!-- Home Info Section with Background Image -->
<section id="home-info" class="bg-dark" style="height: 400px;">
    <div class="info-content">
        <h2><span class="text-primary">Our Story</span> and Heritage</h2>
        <p>Discover the legacy and excellence that make our hotel a preferred choice for travelers worldwide.</p>
        <a href="@Url.Action("About", "Home")" class="btn btn-light">Learn More</a>
    </div>
</section>


         <!-- Features Section -->
<section id="features">
    <div class="box bg-light">
        <i class="fas fa-hotel fa-3x"></i>
        <h3>Prime Location</h3>
        <p>Stay close to iconic attractions and enjoy the vibrancy of our surrounding neighborhood.</p>
    </div>
    <div class="box bg-primary">
        <i class="fas fa-utensils fa-3x"></i>
        <h3>Complimentary Dining</h3>
        <p>Savor an array of culinary delights with meals included in your stay.</p>
    </div>
    <div class="box bg-light">
        <i class="fas fa-dumbbell fa-3x"></i>
        <h3>Modern Gym</h3>
        <p>Stay active with access to our state-of-the-art fitness center.</p>
    </div>
</section>

<div class="clr"></div>

<!-- Testimonials Section with Background Image -->

<section id="testimonials" class="py-3">
    <div class="container">
        <h2 class="l-heading">What Our Guests Say</h2>
        <div class="testimonial bg-primary">
            <img src="~/img/person-1.jpg" alt="Samantha">
            <p>"Booking with HotelFlightBooking was simple and stress-free! We found the best prices for our trip, and the service was fantastic. Highly recommended!"</p>
        </div>

        <div class="testimonial bg-primary">
            <img src="~/img/person-2.jpg" alt="Jen">
            <p>"I was able to plan my entire vacation without visiting multiple websites. HotelFlightBooking made it easy to coordinate flights and hotel stays. Great service and support!"</p>
        </div>
    </div>
</section>
         <div class="clr"></div>

<footer id="main-footer">
    <p> HotelFlightBooking &copy; @DateTime.Now.Year, All Rights Reserved</p>
</footer>

























































