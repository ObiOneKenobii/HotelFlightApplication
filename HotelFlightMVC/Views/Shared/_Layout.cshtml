<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelFlightBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelFlightMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand with enhanced icon -->
                <a class="navbar-brand text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-plane-departure me-2"></i> HotelFlightBooking
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Navigation items with icons -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart me-1"></i>Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FlightTicket" asp-action="Index">
                                <i class="fas fa-ticket-alt me-1"></i>Flight Tickets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="HotelRoom" asp-action="Index">
                                <i class="fas fa-bed me-1"></i>Hotel Rooms
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer footer-light bg-warning text-muted">
        <div class="container">
            &copy; 2024 -  HotelFlightBooking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- WhatsApp/Live Chat Button -->
    <div id="chat-icon" style="position: fixed; bottom: 20px; right: 20px;">
        <button type="button" class="btn btn-success rounded-circle shadow-lg" data-bs-toggle="modal" data-bs-target="#chatModal" title="Contact us via WhatsApp">
            <i class="fab fa-whatsapp fa-2x"></i>
        </button>
    </div>

    <!-- Chat Modal -->
    <div class="modal fade" id="chatModal" tabindex="-1" aria-labelledby="chatModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="chatModalLabel"><i class="fas fa-comments me-2"></i>Live Support</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Connect with us for assistance:</p>
                    <a href="https://wa.me/yourwhatsappnumber" target="_blank" class="btn btn-success w-100 mb-2">
                        <i class="fab fa-whatsapp me-2"></i>Chat via WhatsApp
                    </a>
                    <p class="text-center my-2">or</p>
                    <button class="btn btn-primary w-100" onclick="startLiveChat()">
                        <i class="fas fa-comments me-2"></i>Live Chat
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Placeholder function for live chat integration
        function startLiveChat() {
            alert('Live chat feature coming soon!');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
